 <div id="<%= dom_id packing %>">



  <div class="row">
    <div class="col-lg-12">


      <!-- tabs start -->
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="tab01" data-toggle="tab" href="#tab01_pane" role="tab" aria-controls="tab01_pane" aria-expanded="true">Description</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="tab02" data-toggle="tab" href="#tab02_pane" role="tab" aria-controls="tab02_pane">Products</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="tab03" data-toggle="tab" href="#tab03_pane" role="tab" aria-controls="tab03_pane">Specifications</a>
        </li>
      </ul>
      <div class="tab-content">

        <div class="tab-pane fade show active" id="tab01_pane" role="tabpanel" aria-labelledby="tab01">

          <h6>Introduction</h6>
          <p>
            <%= packing.description %>

          </p>
          <h6></h6>

          <%= packing.content %>

        </div>

        <div class="tab-pane fade" id="tab02_pane" role="tabpanel" aria-labelledby="tab02">

          <h6><%= packing.name %> is common packing for:</h6>
         <div id="accordion03" role="tablist">
          <% if packing.products %>
          <% packing.products.each do |product| %>
          <div class="card">
            <div class="card-header" role="tab" id="collapse00<%= product.id %>_header">
              <h5>
                <a data-toggle="collapse" href="#collapse00<%= product.id %>" aria-expanded="true" aria-controls="collapse00<%= product.id %>">
                  <%= product.name %>
                </a>
              </h5>
            </div>

            <div id="collapse00<%= product.id %>" class="collapse" role="tabpanel" aria-labelledby="collapse00<%= product.id %>_header" data-parent="#accordion03">
              <div class="card-body">
                <%= product.description %>
                <%= link_to " Read more", product_path(product), class: "post-link", data: { turbo: false } %>
              </div>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>



      </div>

      <div class="tab-pane fade" id="tab03_pane" role="tabpanel" aria-labelledby="tab03">
        <h6></h6>
        <%= packing.specification.body.html_safe %>
      </div>
    </div>
  </div>
</div>
</div>

