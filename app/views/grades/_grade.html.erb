












<div class="row">
  <div class="col-lg-12">


    <!-- tabs start -->
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="tab01" data-toggle="tab" href="#tab01_pane" role="tab" aria-controls="tab01_pane" aria-expanded="true">Description</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="tab02" data-toggle="tab" href="#tab02_pane" role="tab" aria-controls="tab02_pane">Specification</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="tab04" data-toggle="tab" href="#tab04_pane" role="tab" aria-controls="tab04_pane">Packings</a>
      </li>

    </ul>
    <div class="tab-content">

      <div class="tab-pane fade show active" id="tab01_pane" role="tabpanel" aria-labelledby="tab01">

        <h6>Introduction</h6>
        <p>
          <%= grade.description %>

        </p>
        <h6></h6>

        <%= grade.content.body.html_safe %>

      </div>

      <div class="tab-pane fade" id="tab02_pane" role="tabpanel" aria-labelledby="tab02">

        <h6></h6>
        <%= grade.specification.body.html_safe %>


      </div>

      <div class="tab-pane fade" id="tab04_pane" role="tabpanel" aria-labelledby="tab04">

       <h6><%= grade.name %> common packings:</h6>
       <div id="accordion03" role="tablist">
        <% if grade.product.packings %>
        <% grade.product.packings.each do |packing| %>
        <div class="card">
          <div class="card-header" role="tab" id="collapse00<%= packing.id %>_header">
            <h5>
              <a data-toggle="collapse" href="#collapse00<%= packing.id %>" aria-expanded="true" aria-controls="collapse00<%= packing.id %>">
                <%= packing.name %>
              </a>
            </h5>
          </div>

          <div id="collapse00<%= packing.id %>" class="collapse" role="tabpanel" aria-labelledby="collapse00<%= packing.id %>_header" data-parent="#accordion03">
            <div class="card-body">
              <%= packing.description %>
              <%= link_to " Read more", packing_path(packing), class: "post-link", data: { turbo: false } %>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>

    </div>

  </div>
  <!-- tabs end-->
</div>
</div>

