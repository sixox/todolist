<div class="row">
  <div class="col-lg-12">


    <!-- tabs start -->
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="tab01" data-toggle="tab" href="#tab01_pane" role="tab" aria-controls="tab01_pane" aria-expanded="true">Description</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="tab02" data-toggle="tab" href="#tab02_pane" role="tab" aria-controls="tab02_pane">Applications</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="tab03" data-toggle="tab" href="#tab03_pane" role="tab" aria-controls="tab03_pane">Grades</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="tab04" data-toggle="tab" href="#tab04_pane" role="tab" aria-controls="tab03_pane">Packings</a>
      </li>

    </ul>
    <div class="tab-content">

      <div class="tab-pane fade show active" id="tab01_pane" role="tabpanel" aria-labelledby="tab01">

        <h6>Introduction</h6>
        <p>
          <%= product.description %>

        </p>
        <h6></h6>

        <%= product.content %>

      </div>

      <div class="tab-pane fade" id="tab02_pane" role="tabpanel" aria-labelledby="tab02">

        <h6><%= product.name %> applications:</h6>
        <div id="accordion02" role="tablist">
          <% if product.posts %>
          <% product.posts.reverse_each do |application| %>
          <div class="card">
            <div class="card-header" role="tab" id="collapse<%= application.id %>_header">
              <h5>
                <a data-toggle="collapse" href="#collapse<%= application.id %>" aria-expanded="true" aria-controls="collapse<%= application.id %>">
                  <%= application.title %>
                </a>
              </h5>
            </div>

            <div id="collapse<%= application.id %>" class="collapse" role="tabpanel" aria-labelledby="collapse<%= application.id %>_header" data-parent="#accordion02">
              <div class="card-body">
                <%= truncate_html(application.content.body.to_html, length: 180) %>
                <%= link_to " Read more", post_path(application), class: "post-link", data: { turbo: false } %>

              </div>
            </div>
          </div>

          <% end %> 

          <% end %>


        </div>


      </div>
      <div class="tab-pane fade" id="tab03_pane" role="tabpanel" aria-labelledby="tab03">
        <h6>Global Synergy supplies <%= product.name %> all grades:</h6>
        <div id="accordion01" role="tablist">
          <% if product.grades %>
          <% product.grades.each do |grade| %>
          <div class="card">
            <div class="card-header" role="tab" id="collapse0<%= grade.id %>_header">
              <h5>
                <a data-toggle="collapse" href="#collapse0<%= grade.id %>" aria-expanded="true" aria-controls="collapse0<%= grade.id %>">
                  <%= grade.name %>
                </a>
              </h5>
            </div>

            <div id="collapse0<%= grade.id %>" class="collapse" role="tabpanel" aria-labelledby="collapse0<%= grade.id %>_header" data-parent="#accordion01">
              <div class="card-body">
                <%= grade.description %>
                <%= link_to " Read more", grade_path(grade), class: "post-link", data: { turbo: false } %>
              </div>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="tab04_pane" role="tabpanel" aria-labelledby="tab02">

        <h6><%= product.name %> common packings:</h6>
         <div id="accordion03" role="tablist">
          <% if product.packings %>
          <% product.packings.each do |packing| %>
          <div class="card">
            <div class="card-header" role="tab" id="collapse00<%= packing.id %>_header">
              <h5>
                <a data-toggle="collapse" href="#collapse00<%= packing.id %>" aria-expanded="true" aria-controls="collapse00<%= packing.id %>">
                  <%= packing.name %>
                </a>
              </h5>
            </div>

            <div id="collapse00<%= packing.id %>" class="collapse" role="tabpanel" aria-labelledby="collapse00<%= packing.id %>_header" data-parent="#accordion03">
              <div class="card-body">
                <%= packing.description %>
                <%= link_to " Read more", packing_path(packing), class: "post-link", data: { turbo: false } %>
              </div>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
        

      </div>
      <!-- tabs end-->
    </div>
  </div>