<%= render "layouts/slide"%>

<%= render "layouts/productsmenu"%>







<section class="ds s-overlay portfolio-section  s-py-xl-160 s-py-lg-130 s-py-md-90 s-py-60">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h2 class="special-heading text-center">
					<span class="text-capitalize">
						Products
					</span>
				</h2>
				<div class="divider-50 hidden-below-lg"></div>
				<div class="divider-30 hidden-above-lg"></div>
				<div class="row justify-content-center">
					<div class="col-md-10 col-xl-8">
						<div class="filters gallery-filters">
							<% @products.each do |product|%> 
							<a href="#" data-filter=".<%= product.name.parameterize%>"><%= product.name%></a>
							<% end %>


						</div>
					</div>
				</div>


				<div class="row isotope-wrapper masonry-layout c-gutter-30 c-mb-30">
					<% @products.each do |product|%>
					<% product.grades.take(3).each do |grade|%>
					<div class="col-xl-4 col-md-6 <%= product.name.parameterize %> ">
						<div class="icon-box service-single ls with-icon rounded big-padding text-center articlecard" style="padding: 38px 60px !important;">
							<%= link_to grade_path(grade), class: "mt-0 #{grade.name.parameterize}", data: { turbo: false } do %>
							<h5 class="mt-0 text-info">
								<%= grade.name %>
							</h5>
							<% end %>
							<%= link_to product_path(product), class: "mt-0 #{grade.name.parameterize}", data: { turbo: false } do %>
							<h6 class="">
								<%= product.name.titleize %>
							</h6>
							<% end %>
							<p class="text-justify">
								<%= truncate(grade.description, length: 250) %>
							</p>
							<h6 class="text-secondary mt-5 text-left">
								Available packings
							</h6>
							<ul class="text-left">
								<% product.packings.each do |packing| %>
								<li class="text-secondary">
									<%= link_to packing_path(packing), class: "text-secondary", data: { turbo: false } do %>
									<%= packing.name.titleize %>
									<% end %>								</li>
									<% end %>
								</ul>
								<%= link_to "read more", grade_path(grade), class: "btn btn-outline-maincolor text-secondary mt-0"%>
							</div>
						</div>
						<% end %>
						<% end %>
					</div>
					<div class="mt--30"></div>
					<div class="row">
						<div class="col-lg-12 text-center">
							<div class="divider-60"></div>
							<a class="btn btn-maincolor2 big-btn text-danger" data-filter="*">See All Product</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>





	<section class="articlehome ls s-pt-xl-160 s-pt-lg-130 s-pt-md-90 s-pt-60 s-pb-xl-280 s-pb-lg-250 s-pb-md-90 s-pb-60 c-gutter-60 c-mb-30">
		<div class="container">

			<div class="row">
				<main class="col-lg-7 col-xl-8">
					<h2 class="special-heading text-center">
						<span class="text-capitalize">
							Latest Articles
						</span>
					</h2>
					<p class="special-heading text-center">
						<span class="text-capitalize color-darkgrey bold">
							our blog
						</span>
					</p>
					<div class="divider-50 hidden-below-lg"></div>
					<div class="divider-30 hidden-above-lg"></div>
					<div class="col-lg-12">

						<div class="row isotope-wrapper portfolio masonry-layout c-mb-30">
							<% @latest_articles.take(4).each do |article|%>
							<div class="col-xl-6 col-md-6">
								<div class="vertical-item text-center content-padding bordered rounded overflow-hidden">
									<div class="item-media">
										<% if article.image.attached? %>
										<%= image_tag article.image, class: 'rounded' %>
										<% end %>
										<div class="media-links">
											<a class="abs-link" title="" href="gallery-single.html"></a>
										</div>
									</div>
									<div class="item-content">
										<h6>

											<%= link_to article.title, post_path(article), data: { turbo: false } %>

										</h6>

										<p>
											<%= truncate_html(article.content.body.to_html, length: 150) %>									</p>

										</div>
									</div>

								</div>
								<% end %>


							</div>
							<!-- .isotope-wrapper-->
						</div>

					</main>

					<aside class="col-lg-5 col-xl-4">
						<div class="widget widget_recent_entries">

							<h3 class="widget-title">Recent Entries</h3>

							<ul>
								<% @latest_articles.take(7).each do |article| %>
								<li>
									<%= link_to article.title, post_path(article), data: { turbo: false } %>
									<br>
									<span>
										<i class="far fa-calendar-alt"></i>
										<%= link_to article.created_at.strftime("%d %b %y"), post_path(article), data: { turbo: false }  %>									</span>	
									</li>
									<% end %>
								</ul>
							</div>
							<div class="widget widget_slider">

								<h3 class="widget-title">Applications</h3>

								<div class="owl-carousel" data-nav="true" data-loop="true" data-autoplay="true" data-items="1" data-responsive-lg="1" data-responsive-md="1" data-responsive-sm="1" data-responsive-xs="1">

									<% @application_posts.each do |application| %>
									<div class="vertical-item">
										<div class="item-media">
											<% if application.image.attached? %>
											<%= image_tag application.image %>
											<% end %>						
										</div>
										<div class="item-content">
											<h4>
												<%= link_to application.title, post_path(application), data: { turbo: false } %>

											</h4>
											<p class="item-meta">
												<i class="far fa-calendar-alt"></i>
												<%= link_to application.created_at.strftime("%d %b %y"), post_path(application), data: { turbo: false }  %>

											</p>

										</div>
									</div>
									<!-- .vertical-item -->
									<% end %>

								</div>
								<!-- .owl-carousel -->

							</div>



						</aside>
					</div>
				</section>





				<section class="ls ms s-pt-xl-160 s-pt-lg-130 s-pt-md-90 s-pt-60 s-pb-xl-280 s-pb-lg-250 s-pb-md-90 s-pb-60">
